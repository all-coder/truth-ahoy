{
  "manifest_version": 3,
  "name": "FactCheck Selector",
  "version": "1.0.0",
  "description": "Select content on web pages for fact-checking analysis",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FactCheck Selector"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.css", "result.html", "result.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}